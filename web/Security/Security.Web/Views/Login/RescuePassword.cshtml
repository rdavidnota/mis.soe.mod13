
@{
    ViewData["Title"] = "Recover Password";
}

<div class="offset-3 col-12">
    @if (ViewBag.recover == null || ViewBag.recover == false)
    {
        <h2>Recover password...</h2>
        <form asp-controller="login" asp-action="recover" method="post">
            <div class="col-6">
                <label for="email">Email</label>
                <input id="email" name="email" type="email" class="form-control" />
                <label for="username">Username</label>
                <input id="username" name="username" type="text" class="form-control" />
            </div>
            <br />
            <div class="col-6">
                <button type="submit" class="btn btn-outline-primary col-12">Recover</button>
                <hr />
            </div>
        </form>
    }
    else
    {
        <div class="col-6">
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Recover Password</strong> La contraseña ha sido enviada a tu correo.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>

    }

</div>
